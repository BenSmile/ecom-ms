pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    // Construire les images Docker pour les services
                    dir('Customer_service') {
                        sh 'docker build -t customer-service .'
                    }
                    dir('Order_Product_service') {
                        sh 'docker build -t order-service .'
                    }
                    dir('Notification_service') {
                        sh 'docker build -t notification-service .'
                    }
                    dir('ecom_ui') {
                        sh 'docker build -t user-interface .'
                    }
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    // Exécuter les tests pour customer-service
                    dir('Customer_service') {
                        sh 'docker run --rm customer-service pytest'
                    }

                    // Exécuter les tests pour order-service
                    dir('Order_Product_service') {
                        sh 'docker run --rm order-service gradle test'
                    }

                    // Exécuter les tests pour notification-service
                    dir('Notification_service') {
                        sh 'docker run --rm notification-service pytest'
                    }

                    // Exécuter les tests pour user-interface
                    dir('ecom_ui') {
                        sh 'docker run --rm user-interface pytest'
                    }
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    // Déployer les conteneurs avec Docker Compose
                    sh 'docker-compose up -d'
                }
            }
        }
    }
}
